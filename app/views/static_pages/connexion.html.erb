<div id="connexion_row" class="row">
	<!--Formulaire enterprise-->
	<div id="signin_company" class="col-md-6">
		<h2 class="connexion_h2">Je suis une entreprise</h2>
		<form class="col-md-10 col-md-offset-1" role="form">
			<div class="form-group">
				<label for="email">Email address</label>
				<input type="email" class="form-control" id="email" placeholder="Enter email">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" class="form-control" id="password" placeholder="Password">
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
		</form>
	</div>

	<!--Formulaire candidat-->
	<div id="signin_candidate" class="col-md-6">
		<h2 class="connexion_h2">Je suis un candidat</h2>
		<form class="col-md-10 col-md-offset-1" role="form">
			<div class="form-group">
				<label for="email">Email address</label>
				<input type="email" class="form-control" id="email" placeholder="Enter email">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" class="form-control" id="password" placeholder="Password">
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
		</form>
	</div>
</div>