	<!-- Modal candidat-->
	<div class="modal fade" id="modal_connexion_candidat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div id="first_modal_header" class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Connexion candidat:</h4>
				</div>

				<div class="modal-body">
					<div class="form_block">
						<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
						<div class="form-group">
							<div><%= f.label :email, :class => "col-sm-2 control-label" %></div>
							<div class="col-sm-10">
								<%= f.email_field :email, :id => "input_email", :class => "form-control", :autofocus => true %>
							</div>
						</div>
						<div class="form-group">
							<div><%= f.label :password, :class => "col-sm-2 control-label" %></div>
							<div class="col-sm-10">
								<%= f.password_field :password, :id => "input_password", :class => "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Sign in", :class => "btn btn-info" %>
							</div>
						</div>
						<% end %>
						<%= render "candidates/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>