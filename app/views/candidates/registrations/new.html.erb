<div style="margin-top:100px;">

 <form class="form-horizontal">
 	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2>Inscription candidat</h2>
    <div class="form-group">
        <%= f.label :email, class:"control-label col-xs-2", style: "text-align:right" %>
        <div class="col-xs-10">
            <%= f.email_field :email, :autofocus => true,class:"form-control inputEmail" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password,class:".control-label col-xs-2", style: "text-align:right" %>
        <div class="col-xs-10">
            <%= f.password_field :password,class:"form-control inputEmail" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation,class:".control-label col-xs-2" %>
        <div class="col-xs-10">
            <%= f.password_field :password_confirmation,class:"form-control inputEmail" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <div><%= f.submit "Sign up" , class:"btn .btn_red", style:"height: 26px;padding-top: 2px;" %></div>
        </div>
    </div>
    <% end %>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            Vous  êtes déja inscrit ? <br>
           <%= render "devise/shared/links" %>

        </div>
    </div>
</form>

</div>

